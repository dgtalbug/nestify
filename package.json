    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.25",
    "@types/nodemailer": "^6.4.0",
    "@types/passport-jwt": "^3.0.4",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
